<%- include("./layout/header") %>

<div id="wrapper">
    <!-- Sidebar -->
    <%- include("./layout/sidebar") %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Navbar -->
        <%- include("./layout/navbar") %>
        <!-- End of Navbar -->

        <!-- Page Content -->
        <div class="container-fluid">
            <div class="productp">

                <div class="card cardp">
                    <div class="card-header bg-secondary text-white">
                        <h3 class="mb-0" style="font-family: 'Comfortaa';">➕ Add Event</h3>
                    </div>
                    <div class="card-body">
                        <form action="/createEvent" method="post" enctype="multipart/form-data">
                            
                            <!-- Name -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Event Name</label>
                                <input type="text" name="name" placeholder="Enter product name" class="form-control rounded-pill shadow-sm" required />
                            </div>
                            
                            <!-- Category -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Category</label>
                                <!-- <input type="text" name="category" placeholder="Enter product category" class="form-control rounded-pill shadow-sm" required /> -->
                                <select name="category" class="form-control" required>
                                    <option value="">-- Select Category --</option>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>">
                                            <%= cat.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            
                            <!-- Description -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Description</label>
                                <textarea name="description" placeholder="Enter product description" class="form-control rounded shadow-sm" rows="3" required></textarea>
                            </div>
                            
                           
                            
                            
                            <!-- Price & Tickets -->
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">
                                            Ticket Price (₹)
                                        </label>
                                        <input type="number" name="price"
                                            class="form-control rounded-pill shadow-sm"
                                            placeholder="0" required>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">
                                            Total Tickets
                                        </label>
                                        <input type="number" name="totalTickets"
                                            class="form-control rounded-pill shadow-sm"
                                            placeholder="0" required>
                                    </div>
                                </div>

                                <!-- Date & Location -->
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">
                                            Event Date
                                        </label>
                                        <input type="date" name="date"
                                            class="form-control rounded-pill shadow-sm" required>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-semibold">
                                            Location
                                        </label>
                                        <input type="text" name="location"
                                            class="form-control rounded-pill shadow-sm"
                                            placeholder="Location" required>
                                    </div>
                                </div>
                            
                            <!-- Images -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Event Images</label>
                                <input type="file" name="image" class="form-control shadow-sm" multiple required />
                                <small class="text-muted">You can upload multiple images.</small>
                            </div>
                            
                            <!-- Submit -->
                            <!-- <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                                Submit Event
                            </button> -->

                            <button type="submit" class="btn gradient-btn rounded-pill px-4 shadow-sm">
                                Submit Event
                            </button>

                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Content -->

        <%- include("./layout/footer") %>
    </div>
</div>
