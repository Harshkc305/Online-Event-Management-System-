<%- include("./layout/header") %>

<div id="wrapper">
    <%- include("./layout/sidebar") %>

    <div id="content-wrapper" class="d-flex flex-column">
        <%- include("./layout/navbar") %>

        <div class="container-fluid mt-4">

            <!-- PAGE HEADER -->
            <div class="d-flex justify-content-between align-items-center mb-4 upage ">
                <div class="ml-4">
                    <h4 class="fw-bold mb-1">Users</h4>
                    <p class="text-muted mb-0">Manage registered users</p>
                </div>
            </div>

            <!-- USERS CARD -->
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">

                    <div class="table-responsive">
                        <table class="table align-middle table-borderless table-hover">
                            <thead class="text-muted small">
                                <tr>
                                    <th>#</th>
                                    <th>User</th>
                                    
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% if (data.length > 0) { %>
                                    <% data.forEach((item, index) => { %>
                                        <tr class="user-row">

                                            <td class="text-muted"><%= index + 1 %></td>

                                            <!-- USER INFO -->
                                            <td>
                                                <div class="d-flex align-items-center gap-4">
                                                    <img 
                                                        src="<%= item.image || '/img/undraw_profile.svg' %>"
                                                        class="user-avatar-square mr-3">

                                                    <div>
                                                        <div class="fw-semibold fs-6"><%= item.name %></div>
                                                    </div>
                                                </div>
                                            </td>



                                            <td class="text-muted"><%= item.email %></td>

                                            <!-- ROLE -->
                                            
                                            <td>
                                                <span class="badge role-badge bg-light text-dark">
                                                    <%= item.role || 'User' %>
                                                </span>
                                            </td>

                                           


                                            <!-- ACTIONS -->
                                            <td class="text-end">
                                                <div class="action-group">
                                                    <!-- <a href="/admin/user/view/<%= item._id %>" 
                                                       class="action-btn view"
                                                       title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a> -->

                                                    <!-- <a href="/admin/user/edit/<%= item._id %>" 
                                                       class="action-btn edit"
                                                       title="Edit">
                                                        <i class="fas fa-pen"></i>
                                                    </a> -->

                                                    <a href="/delete-user/<%= item._id %>" 
                                                       onclick="return confirm('Delete this user?')"
                                                       class="action-btn delete"
                                                       title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>

                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            No users found
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <%- include("./layout/footer") %>
    </div>
</div>
